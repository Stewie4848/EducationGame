<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/settings_header">

        <EditTextPreference
            android:background="@color/background_black"
            app:defaultValue="@string/default_username"
            app:key="username"
            app:title="@string/username_title"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:defaultValue="60"
            app:key="time_setting"
            app:title="@string/time_title"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            android:entries="@array/skip_amount"
            android:entryValues="@array/skip_amount"
            app:defaultValue="3"
            app:key="skip_setting"
            app:title="Amount of skips"
            app:useSimpleSummaryProvider="true" />


        <ListPreference
            app:defaultValue="1"
            app:entries="@array/difficulty_entries"
            app:entryValues="@array/difficulty_values"
            app:key="difficulty_setting"

            app:title="@string/difficulty_title"
            app:useSimpleSummaryProvider="true" />


    </PreferenceCategory>


</PreferenceScreen>